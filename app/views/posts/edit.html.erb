<div class="top-margin">
	<h1 class="text-center">EDIT POST FORM</h1>
	<%=form_for @post, html:{class: "form-horizontal"} do |f|%>
		<%if @post.image.present?%>
			<%=image_tag @post.image.large_thumb.url%>
			<br>
		<%else%>
			<%= image_tag "default.png", width:"1100", height: "249"%>
			<br>
		<%end%>
			<br>
			<%=f.file_field :image%>
			<br>
		<%if @post.attachment.present?%>	
			Attachment: <%= link_to @post.attachment.identifier, @post.attachment.url%>
		<%else%>
			<%="No Attachment"%>
		<%end%>
			<%=f.file_field :attachment%>
			<br>
		<div class="form-group">
			<%=f.label :email, class: "col-md-1"%>
			<div class="col-md-11">
				<%=f.text_field :email, class: "form-control"%>
			</div>
		</div>
		<div class="form-group">
			<%=f.label :title, class: "col-md-1"%>
			<div class="col-md-11">
				<%=f.text_field :title, class: "form-control"%>
			</div>
		</div>
		<div class="form-group">
			<%=f.label :body, class: "col-md-1"%>
			<div class="col-md-11">
				<%=f.text_area :body, class: "form-control"%>
			</div>
		</div>
		<div class="col-sm-offset-1 col-sm-11">
			<%=f.submit "UPDATE POST", class: "btn btn-success"%>
		</div>
	<%end%>
<br>
<%= link_to "BACK", :back%>